{
  "name": "oneof_augmentation_degradation",
  "description": "Degradation with one_of augmentation strategy - picks ONE transform per image",

  "noise": {
    "enabled": true,
    "type": "gaussian_kspace",
    "mean": 0.0,
    "std_range": [0.01, 0.03],
    "relative": true,
    "reference": "std"
  },

  "undersampling": {
    "strategy": "one_of",
    "patterns": [
      {
        "name": "random",
        "enabled": true,
        "weight": 1.0,
        "params": {
          "prob_range": [0.5, 0.7],
          "center_fraction": 0.08,
          "axis": -2
        }
      }
    ]
  },

  "artifacts": {},

  "augmentation": {
    "enabled": true,
    "strategy": "one_of",

    "identity": {
      "enabled": true,
      "probability": 1.0,
      "weight": 0.1
    },

    "horizontal_flip": {
      "enabled": true,
      "probability": 1.0,
      "weight": 1.0
    },

    "vertical_flip": {
      "enabled": true,
      "probability": 1.0,
      "weight": 1.0
    },

    "rotation_90": {
      "enabled": true,
      "probability": 1.0,
      "angles": [90, 180, 270],
      "weight": 1.0
    },

    "random_crop": {
      "enabled": true,
      "probability": 1.0,
      "crop_size": 30,
      "weight": 1.0
    },

    "padding": {
      "enabled": true,
      "probability": 1.0,
      "pad_size": 30,
      "padding_mode": "reflect",
      "weight": 1.0
    }
  },

  "execution": {
    "apply_order": ["noise", "undersampling"],
    "seed": null,
    "deterministic": false
  }
}
