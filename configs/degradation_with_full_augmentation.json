{
  "name": "full_augmentation_degradation",
  "description": "Degradation with comprehensive spatial augmentation using MriWizard transforms",

  "noise": {
    "enabled": true,
    "type": "gaussian_kspace",
    "mean": 0.0,
    "std_range": [0.01, 0.03],
    "relative": true,
    "reference": "std"
  },

  "undersampling": {
    "strategy": "one_of",
    "patterns": [
      {
        "name": "random",
        "enabled": true,
        "weight": 1.0,
        "params": {
          "prob_range": [0.5, 0.7],
          "center_fraction": 0.08,
          "axis": -2
        }
      }
    ]
  },

  "artifacts": {},

  "augmentation": {
    "enabled": true,
    "strategy": "sequential",

    "horizontal_flip": {
      "enabled": true,
      "probability": 0.5,
      "weight": 1.0
    },

    "vertical_flip": {
      "enabled": true,
      "probability": 0.5,
      "weight": 1.0
    },

    "rotation_90": {
      "enabled": true,
      "probability": 0.5,
      "angles": [90, 180, 270],
      "weight": 1.0
    },

    "random_crop": {
      "enabled": false,
      "probability": 0.3,
      "crop_size": 10,
      "weight": 0.5
    },

    "padding": {
      "enabled": false,
      "probability": 0.3,
      "pad_size": 10,
      "padding_mode": "reflect",
      "weight": 0.5
    },

    "resize": {
      "enabled": false,
      "probability": 0.2,
      "target_shape": [256, 256],
      "interpolation": 1,
      "weight": 0.3
    }
  },

  "execution": {
    "apply_order": ["noise", "undersampling"],
    "seed": null,
    "deterministic": false
  }
}
